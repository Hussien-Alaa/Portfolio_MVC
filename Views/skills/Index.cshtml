
@{
    ViewBag.Title = "Skills Experience";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
   
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h1 class="display-4 fw-bold">Skills</h1>
            <div class="border-bottom border-3 border-primary w-25 mx-auto my-3"></div>
            <p class="lead text-muted">My technical skills and proficiency levels</p>
        </div>
    </div>

    <div class="row g-4">
        <!-- Frontend Development Card -->
        <div class="col-lg-6">
            <div class="card h-100 shadow-lg border-0 rounded-4">
                <div class="card-header bg-gradient text-center py-3" style="background-color: #f8f9fa;">
                    <h2 class="card-title fw-bold mb-0">Frontend Development</h2>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        @foreach (var skill in Model.FrontendSkills)
                        {
                            <div class="list-group-item d-flex align-items-center border-0 border-bottom py-3">
                                <div class="flex-shrink-0">
                                   
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h5 class="fw-bold mb-1">@skill.Name</h5>
                                    <div class="d-flex align-items-center">
                                        <span class="badge rounded-pill @GetBadgeClass(skill.Level) me-2">@skill.Level</span>
                                        <div class="progress flex-grow-1" style="height: 8px;">
                                            <div class="progress-bar @GetProgressBarClass(skill.Level)" role="progressbar"
                                                 style="width: @GetProgressWidth(skill.Level)%;"
                                                 aria-valuenow="@GetProgressWidth(skill.Level)" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </div>
                                </div>
                               
                            </div>
                        }
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 text-center py-3">
                    <button type="button" class="btn btn-outline-primary rounded-pill" data-bs-toggle="modal" data-bs-target="#frontendModal">
                        <i class="bi bi-eye-fill me-1"></i> View All Frontend Skills
                    </button>
                </div>
            </div>
        </div>

        <!-- Backend Development Card -->
        <div class="col-lg-6">
            <div class="card h-100 shadow-lg border-0 rounded-4">
                <div class="card-header bg-gradient text-center py-3" style="background-color: #f8f9fa;">
                    <h2 class="card-title fw-bold mb-0">Backend Development</h2>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        @foreach (var skill in Model.BackendSkills)
                        {
                            <div class="list-group-item d-flex align-items-center border-0 border-bottom py-3">
                                <div class="flex-shrink-0">
                                    
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h5 class="fw-bold mb-1">@skill.Name</h5>
                                    <div class="d-flex align-items-center">
                                        <span class="badge rounded-pill @GetBadgeClass(skill.Level) me-2">@skill.Level</span>
                                        <div class="progress flex-grow-1" style="height: 8px;">
                                            <div class="progress-bar @GetProgressBarClass(skill.Level)" role="progressbar"
                                                 style="width: @GetProgressWidth(skill.Level)%;"
                                                 aria-valuenow="@GetProgressWidth(skill.Level)" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </div>
                                </div>
                             
                            </div>
                        }
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 text-center py-3">
                    <button type="button" class="btn btn-outline-primary rounded-pill" data-bs-toggle="modal" data-bs-target="#backendModal">
                        <i class="bi bi-eye-fill me-1"></i> View All Backend Skills
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Frontend Skills Modal -->
<div class="modal fade" id="frontendModal" tabindex="-1" aria-labelledby="frontendModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content rounded-4 border-0 shadow">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="frontendModalLabel">Frontend Development Skills</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <div class="row row-cols-1 row-cols-md-2 g-4">
                    @foreach (var skill in Model.FrontendSkills)
                    {
                        <div class="col">
                            <div class="card h-100 border-0 shadow-sm rounded-3">
                                <div class="card-body d-flex align-items-center">
                                   
                                    <div>
                                        <h5 class="card-title mb-1">@skill.Name</h5>
                                        <span class="badge @GetBadgeClass(skill.Level)">@skill.Level</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Backend Skills Modal -->
<div class="modal fade" id="backendModal" tabindex="-1" aria-labelledby="backendModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content rounded-4 border-0 shadow">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="backendModalLabel">Backend Development Skills</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <div class="row row-cols-1 row-cols-md-2 g-4">
                    @foreach (var skill in Model.BackendSkills)
                    {
                        <div class="col">
                            <div class="card h-100 border-0 shadow-sm rounded-3">
                                <div class="card-body d-flex align-items-center">
                                  
                                    <div>
                                        <h5 class="card-title mb-1">@skill.Name</h5>
                                        <span class="badge @GetBadgeClass(skill.Level)">@skill.Level</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}

@functions {
    public string GetBadgeClass(string level)
    {
        switch (level)
        {
            case "Basic":
                return "bg-warning text-dark";
            case "Intermediate":
                return "bg-info text-dark";
            case "Experienced":
                return "bg-success";
            default:
                return "bg-secondary";
        }
    }

    public string GetProgressBarClass(string level)
    {
        switch (level)
        {
            case "Basic":
                return "bg-warning";
            case "Intermediate":
                return "bg-info";
            case "Experienced":
                return "bg-success";
            default:
                return "bg-secondary";
        }
    }

    public int GetProgressWidth(string level)
    {
        switch (level)
        {
            case "Basic":
                return 33;
            case "Intermediate":
                return 66;
            case "Experienced":
                return 100;
            default:
                return 0;
        }
    }
}