@model List<Project>

<div class="container py-3 mt-5">
    <h3 class="text-center mb-3">Projects</h3>

    <div class="row g-3">
        @foreach (var project in Model)
        {
            <div class="col-md-4">
                <div class="card project-card border-0 shadow-sm h-100">
                    <img src="@project.ImageUrl" class="card-img-top project-img" alt="@project.Title">
                    <div class="card-body p-3">
                        <h6 class="card-title text-center mb-2">@project.Title</h6>
                        <p class="card-text small text-muted mb-0">@project.description</p>
                    </div>
                  
                </div>
            </div>
        }
    </div>
</div>