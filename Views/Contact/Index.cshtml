<div class="d-flex flex-column justify-content-center align-items-center min-vh-100">
    <div class="text-center mb-5">
        <p class="text-secondary mb-2">Get in Touch</p>
        <h1 class="display-4 fw-bold">Contact Me</h1>
    </div>

    @foreach (var contact in Model)
    {
        <div class="d-flex flex-column align-items-center mb-4">
            <div class="d-flex align-items-center mb-3">
                <i class="fas fa-envelope me-2"></i>
                <a href="mailto:hussien.alaaraafat.com" class="text-decoration-none text-dark contact-link">
                    @contact.Email
                </a>
            </div>

            <div class="d-flex align-items-center">
                <i class="fab fa-linkedin"></i>
                <a href="@contact.LinkedInUrl" target="_blank" class="text-decoration-none text-dark contact-link">
                    LinkedIn
                </a>
            </div>
        </div>
    }
</div>